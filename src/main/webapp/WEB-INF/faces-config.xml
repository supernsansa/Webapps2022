<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registerUser</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>userLogout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewFPayments</from-outcome>
            <to-view-id>/users/viewFulfilledPayments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>doneViewFPayments</from-outcome>
            <to-view-id>/users/viewFulfilledPayments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewPending</from-outcome>
            <to-view-id>/users/viewPendingPayments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sendMoney</from-outcome>
            <to-view-id>/users/sendMoney.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>reqMoney</from-outcome>
            <to-view-id>/users/requestMoney.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewNotifs</from-outcome>
            <to-view-id>/users/viewNotifications.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminLogout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminReigster</from-outcome>
            <to-view-id>/admins/adminRegistration.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewFPayments</from-outcome>
            <to-view-id>/admins/viewAllFulfilledPayments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAPReqs</from-outcome>
            <to-view-id>/admins/viewAllPaymentRequests.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAllUsers</from-outcome>
            <to-view-id>/admins/viewAllUsers.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/adminRegistration.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registerAdminDone</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registerDone</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/viewAllFulfilledPayments.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>viewFPDone</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/viewAllPaymentRequests.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneViewAPReqs</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admins/viewAllUsers.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneViewAllUsers</from-outcome>
            <to-view-id>/admins/admin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/viewPendingPayments.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneViewPending</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/sendMoney.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneSendMoney</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/requestMoney.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneReqMoney</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/users/viewNotifications.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>doneViewNotifs</from-outcome>
            <to-view-id>/users/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
